{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "verified_quotes": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The quote text"
            },
            "speaker": {
              "type": "string",
              "description": "Verified speaker name"
            },
            "book": {
              "type": "string",
              "description": "Book number in Roman numerals"
            },
            "context_before": {
              "type": "string",
              "description": "Text before the quote"
            },
            "context_after": {
              "type": "string",
              "description": "Text after the quote"
            },
            "historically_significant": {
              "type": "boolean",
              "default": false
            },
            "notes": {
              "type": "string",
              "description": "Additional context or comments"
            },
            "verification_date": {
              "type": "string",
              "format": "date-time"
            },
            "original_attribution": {
              "type": "object",
              "properties": {
                "speaker": {
                  "type": "string"
                },
                "confidence": {
                  "type": "number"
                },
                "pattern_matched": {
                  "type": "string"
                }
              }
            }
          },
          "required": ["text", "speaker", "book", "verification_date"]
        }
      }
    }
  }